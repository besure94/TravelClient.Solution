@{
  ViewData["Title"] = $"Edit {Model.City}, {Model.Country} by {Model.Author}";
}

@model TravelClient.Models.Review

<h4>Edit @Model.City, @Model.Country by @Model.Author</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.ReviewId)
  @Html.LabelFor(model => model.City)
  @Html.TextBoxFor(model => model.City, new { @Value = Model.City })
  <br>
  @Html.LabelFor(model => model.Country)
  @Html.TextBoxFor(model => model.Country, new { @Value = @Model.Country })
  <br>
  @Html.LabelFor(model => model.Message)
  @Html.TextBoxFor(model => model.Message, new { @Value = @Model.Message })
  <br>
  @Html.LabelFor(model => model.Rating)
  @Html.TextBoxFor(model => model.Rating, new { @Value = @Model.Rating })
  <br>
  @Html.LabelFor(model => model.Author)
  @Html.TextBoxFor(model => model.Author, new { @Value = @Model.Author })
  <br>
  <br>
  <input type="submit" value="Edit review" class="btn btn-primary"/>
}

<br>
<p>@Html.ActionLink("Back to details", "Details", new { id = @Model.ReviewId })</p>