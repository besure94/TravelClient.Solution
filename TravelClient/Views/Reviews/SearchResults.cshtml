@{
  ViewData["Title"] = "Search Results";
}

@model List<Review>;

<h1>Review Search Results</h1>

@if (@Model.Count == 0)
{
  <p>Your search did not return any results.</p>
}
else
{
  <ol>
    @foreach (Review review in Model)
    {
      <li><strong>@review.City, @review.Country</strong> by @review.Author | <a href="/Reviews/Details/@(review.ReviewId)">View Details</a></li>
    }
  </ol>
}

<p>@Html.ActionLink("Back to search page", "Search")</p>