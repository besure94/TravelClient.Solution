@{
  ViewData["Title"] = $"Delete {Model.City}, {Model.Country} by {Model.Author}";
}

@model TravelClient.Models.Review

<h4>Are you sure you want to delete @Model.City, @Model.Country by @Model.Author?</h4>

@using (Html.BeginForm())
{
  <input type="submit" value="Delete" class="btn btn-primary"/>
}

<p>@Html.ActionLink("Back to review details", "Details", new { id = @Model.ReviewId })</p>